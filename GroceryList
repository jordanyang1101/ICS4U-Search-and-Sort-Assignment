import java.util.ArrayList;
import java.util.Scanner;

class GroceryList {
  Scanner input = new Scanner(System.in);

  public void checkOnList(ArrayList<String> groceryList) {
    System.out.println("What is the item you are looking for?");
    String item = input.nextLine();

    sequentialSearch(groceryList, item);
  }

  public void sequentialSearch(ArrayList<String> groceryList, String item) {
    for (int i = 0; i < groceryList.size(); i++) {
      if (groceryList.get(i).equals(item)) {
        System.out.println("The item is on the list at index " + (i + 1));
        return;
      }
    }

    while (true) {
      System.out.println("The item is not on the list, do you want to add it? (Y/N)");
      String choice = input.nextLine();
      switch (choice) {
        case "Y":
          groceryList.add(item);
          System.out.println("Item added to the list.");
          return;
        case "N":
          return;
        default:
          System.out.println("Invalid input. Please enter Y or N.");
      }
    }
  }

  public void sequentialSearch(ArrayList<String> groceryList, String item, boolean toRemove) {
    for (int i = 0; i < groceryList.size(); i++) {
      if (groceryList.get(i).equals(item)) {
        System.out.println("The item is on the list and will be removed.");
        groceryList.remove(i);
        return;
      }
    }
    System.out.println("The item was not found.");
  }

  public void addToList(ArrayList<String> groceryList) {
    System.out.println("What is the item you would like to add?");
    String item = input.nextLine();

    sequentialSearch(groceryList, item);
  }

  public void removeFromList(ArrayList<String> groceryList) {
    System.out.println("What is the item you would like to remove?");
    String item = input.nextLine();
    boolean toRemove = true;

    sequentialSearch(groceryList, item, toRemove);
  }

  public void finish(ArrayList<String> groceryList) {
    System.out.println("Original Grocery List:");
    System.out.println(groceryList);
    System.out.println("Sorted Grocery List:");

    for (int i = 0; i < groceryList.size() - 1; i++) {
      for (int j = 0; j < groceryList.size() - i - 1; j++) {
        if (groceryList.get(j).compareTo(groceryList.get(j + 1)) > 0) {
          // Swap elements
          String temp = groceryList.get(j);
          groceryList.set(j, groceryList.get(j + 1));
          groceryList.set(j + 1, temp);
        }
      }
    }
    System.out.println(groceryList);
  }
}
