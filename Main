import java.util.ArrayList;
import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner input = new Scanner(System.in);

    ArrayList<String> groceryList = new ArrayList<String>();
    GroceryList manager = new GroceryList();

    while (true) {
      System.out.println("This is your current grocery list:");
      System.out.println(groceryList);

      System.out.println("What would you like to do?");
      System.out.println("1. Add an item");
      System.out.println("2. Remove an item");
      System.out.println("3. Find an item");
      System.out.println("4. Finish");

      String choice = input.nextLine();
      switch (choice) {
        case "1":
          manager.addToList(groceryList);
          break;
        case "2":
          manager.removeFromList(groceryList);
          break;
        case "3":
          manager.checkOnList(groceryList);
          break;
        case "4":
          manager.finish(groceryList);
          return;
        default:
          System.out.println("Invalid input. Please enter a number between 1 and 4.");
      }
    }
  }
}
